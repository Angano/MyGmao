{% if form is defined %}
	{{ form_errors(form) }}
	{{form_start(form)}}
	{{ form_row(form._token) }}
{% endif %}


<div class="card">
	<div class="alert-primary card-header h5">
		<b>
			{% if titre is defined %}
				{{titre}}
			{% endif %}
		</b>

	</div>
	<div class="card-body">

		<div class="row">
			<div class="col-md-8 mx-auto">


				<div class="row position-relative">
					<div style="position: absolute;
						width: 100%;
						z-index: -15;
						background-color: white;
						top: 3rem;
						min-height: 15rem;
						border: solid;" id="resultat-materiels"></div>
					<div class="col-md-4">
						<div class="input-group mb-3">
							<span class="input-group-text" id="basic-addon1">Marque</span>
							{% if form is defined %}
								{{form_widget(form.materieltype)}}
								<input class="form-control" type="text" id="materiel-materiels" value="{% if materiel.materieltype.marque is defined %} {{materiel.materieltype.marque}} {% endif %}">

							{% else %}
								<input type="text" class="form-control" value="{% if materiel.materieltype.marque is defined %} {{materiel.materieltype.marque}} {% endif %}" aria-label="marque" aria-describedby="basic-addon1">
							{% endif %}
						</div>
					</div>
					<div class="col-md-4">
						<div class="input-group mb-3">
							<span class="input-group-text" id="basic-addon1">Modèle</span>
							<input id="modele-materiel" type="text" class="form-control" value="{% if materiel.materieltype.modele is defined %} {{materiel.materieltype.modele}} {% endif %}" aria-label="Username" aria-describedby="basic-addon1">
						</div>
					</div>
					<div class="col-md-4">
						<div class="input-group mb-3">
							<span class="input-group-text" id="basic-addon1">Catégorie</span>
							<input id="categorie-materiel" type="text" class="form-control" value="{% if materiel.materieltype.categorie is defined %} {{materiel.materieltype.categorie}} {% endif %}" aria-label="Compteur" aria-describedby="basic-addon1">
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="input-group mb-3">
							<span class="input-group-text" id="basic-addon1">Matricule</span>

							{% if form is defined %}
								{{form_widget(form.matricule)}}
							{% else %}

								<input type="text" class="form-control" value="{% if materiel.matricule is defined %} {{materiel.matricule}} {% endif %}" aria-label="Username" aria-describedby="basic-addon1">
							{% endif %}

						</div>

					</div>

					<div class="col-md-4">
						<div class="input-group mb-3">
							<span class="input-group-text" id="basic-addon1">Compteur</span>
							{% if form is defined %}
								{{form_widget(form.compteur)}}
							{% else %}
								<input type="text" class="form-control" value="{% if materiel.compteur is defined %} {{materiel.compteur}} {% endif %}" aria-label="Compteur" aria-describedby="basic-addon1">
							{% endif %}

						</div>
					</div>
				</div>

				<hr>

				<div class="row ">
					<div class="col-md-10">
						<h5>
							<b>Client</b>
						</h6>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 mx-auto"><hr style="border:solid 2px black"></div>
				</div>

				<div class="row">
					<div class="d-flex">

						<div class="d-flex flex-column">
							<div class="input-group mb-3 mx-1">
								<span class="input-group-text " id="basic-addon1">Société</span>
								{% if form is defined %}
									{{form_widget(form.client)}}

									<input class="form-control" type="text" id="materiel-client" value="{% if materiel.client.societe is defined %} {{materiel.client.societe}} {% endif %}" >
									<div style="position:relative;width:100%; top:1rem">
										<div style="position:absolute;width:100%" id="resultat-client"></div>
									</div>


								{% else %}
									<input type="text" class="form-control" value="{% if materiel.client.societe is defined %} {{materiel.client.societe}} {% endif %}" aria-label="Societe" aria-describedby="basic-addon1">


								{% endif %}
							</div>
							<div class="d-flex">
								<div class="input-group mb-3 mx-1">
									<span class="input-group-text" id="basic-addon1">Nom</span>
									<input type="text" id="nom-client" class="form-control" value={% if materiel.client.nom is defined %} {{materiel.client.nom}} {% endif %} "" aria-label="Nom" aria-describedby="basic-addon1">
								</div>
								<div class="input-group mb-3 mx-1">
									<span class="input-group-text" id="basic-addon1">Prénom</span>
									<input id="prenom-client" type="text" class="form-control no-edit" value="{% if materiel.client.prenom is defined %} {{materiel.client.prenom}} {% endif %}" aria-label="Prenom" aria-describedby="basic-addon1">
								</div>
							</div>
							<div class=" ">

								<div class="co<div class= row mt-3">

									<div class="input-group mb-3">
										<span class="input-group-text" id="basic-addon1" style="width:100%">Adresse</span>
										<textarea id="adresse-client" class="form-control no-edit" aria-label="Adresse" aria-describedby="basic-addon1" style="width:100%" rows="2">{% if materiel.client.adresse is defined %}{{materiel.client.adresse}}{% endif %}</textarea>
									</div>
									<div class="d-flex">
										<div class="input-group mb-3 mx-1 w-50">
											<span class="input-group-text" id="basic-addon1">Code postal</span>
											<input id="codepostal-client" type="text" class="form-control no-edit " value="{% if materiel.client.codepostal is defined %} {{materiel.client.codepostal}} {% endif %}" aria-label="Username" aria-describedby="basic-addon1">
										</div>
										<div class="input-group mb-3 mx-1">
											<span class="input-group-text" id="basic-addon1">Ville</span>
											<input id="ville-client" type="text" class="form-control no-edit" value="{% if materiel.client.ville is defined %} {{materiel.client.ville}} {% endif %}" aria-label="Username" aria-describedby="basic-addon1">
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-4 mx-auto">
				<div class="input-group mb-3 flex-column" style="height:100%">
					<span class="input-group-text" id="basic-addon1">Information complémentaire</span>
					{% if form is defined %}
						{{form_widget(form.infos)}}
					{% else %}
						<textarea class="form-control" aria-label="Username" aria-describedby="basic-addon1" style="width:100%" rows="9">{% if materiel.infos is defined %}{{materiel.infos}}{% endif %}</textarea>
					{% endif %}

				</div>

			</div>

		</div></div>
		<div class="card-footer d-flex justify-content-end">


			{% if form is defined %}
				{{form_widget(form.enregistrer,{'label': enregistrer_label|default('Save')})}}
			{% else %}
				{% if materiel.id is defined %}
					{{ include('materiel/_delete_form.html.twig') }}
					<a href="{{ path('materiel_edit', {'id': materiel.id}) }}" class="btn btn-sm btn-primary">Editer</a>
				{% endif %}

			{% endif %}
		</div>
	
	</div>

	<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

		{% block javascripts %}
			<script src="{{asset('js/materiel.js')}}"></script>


		{% endblock %}
